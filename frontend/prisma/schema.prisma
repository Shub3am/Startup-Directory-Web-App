generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:directory.db"
}

model startups {
  ID Int @id @default(autoincrement())
  NAME String 
  DESCRIPTION String?
  FOUNDED String
  INDUSTRY String @default(value: "Unknown")
  FUNDING_AMOUNT Int?
  INVESTOR String @default(value: "Unknown")
  INVESTMENT_TYPE String @default(value: "Unknown")
  CITY String @default(value: "Unknown")
}